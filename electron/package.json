{
  "name": "nawi-ui",
  "author": "Michael Pesce",
  "version": "0.1.0",
  "private": true,
  "main": "build/main.js",
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^20.0.0",
    "electron-builder": "^23.3.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build-frontend": "npm --prefix ui run build",
    "start-backend": "cd ../backend/app && uvicorn main:app --reload --host 0.0.0.0 --port 8001",
    "build-backend": "cd ../backend/app && pyinstaller -y --clean --distpath ../../electron/py_dist main.spec",
    "electron-build-mac": "npm run remove-previous-dist && electron-builder -m -c.extraMetadata.main=build/main.js || electron-builder -m -c.extraMetadata.main=build/main.js",
    "dist:mac": "npm run build-backend && npm run build-frontend && electron-builder -m -c.extraMetadata.main=build/main.js",
    "dist:win": "npm run build-backend && npm run build-frontend && electron-builder -w -c.extraMetadata.main=build/main.js",
    "remove-previous-backend-build": "rm -r py_dist/*",
    "remove-previous-dist": "rm -r dist/*"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": ".",
  "build": {
    "appId": "com.electron.watertap-ui",
    "extends": null,
    "asar": false,
    "productName": "WaterTAP-UI",
    "files": [
      "dist/**/*",
      "build/**/*",
      "py_dist/**/*",
      "package.json",
      "get-idaes-extensions-dist/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      "public/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "utilities",
      "type": "development",
      "icon": "build/watertap-logo.ico"
    },
    "win": {
      "target": "msi",
      "icon": "build/watertap-logo.ico"
    },
    "linux": {
      "target": "deb",
      "category": "Development"
    }
  }
}
